{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "AppMusica",
  "version": "0.1.0",
  "identifier": "com.appmusica.desktop",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "AppMusica",
        "width": 1000,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "transparent": true,
        "decorations": false,
        "windowEffects": {
          "effects": [
            "acrylic"
          ],
          "state": "active"
        }
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "bin/backend"
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}